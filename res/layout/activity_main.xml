<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <EditText
        android:id="@+id/id_para_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Input Paragraph"
        android:background="@drawable/border_edittext"
        android:layout_gravity="center"
        android:inputType="textMultiLine"
        android:lines="4"
        android:gravity="top|left"
        android:padding="10dp"
        >
        <requestFocus />
    </EditText>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip last"
            android:textSize="15sp"
            android:textColor="#6C1AF1"
            android:layout_gravity="center"
            />
        <EditText
            android:id="@+id/id_et_no"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/border_edittext"
            android:inputType="number"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="words in a sentence."
            android:textSize="15sp"
            android:textColor="#6C1AF1"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/id_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="number of words you don't want to reverse should not be greater than length of the sentence."
        android:textSize="12sp"
        android:textColor="#F40A25"

        />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border_edittext"
        android:layout_gravity="center"
        android:text="RUN"
        android:textColor="#6C1AF1"
        android:textSize="25dp"
        android:onClick="reverseFunction"
        />
    <TextView
        android:id="@+id/id_result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Output"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:background="@drawable/border_edittext"/>

</LinearLayout>